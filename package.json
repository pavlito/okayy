{
  "name": "affirm",
  "version": "0.0.1",
  "description": "A confirm dialog for React. One line. Beautiful.",
  "license": "MIT",
  "author": "Pavle Lucic",
  "keywords": [
    "react",
    "confirm",
    "dialog",
    "modal",
    "confirmation",
    "alert",
    "confirm-dialog"
  ],
  "homepage": "https://pavlito.github.io/affirm",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pavlito/affirm.git"
  },
  "bugs": {
    "url": "https://github.com/pavlito/affirm/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles.css": "./dist/styles.css"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "size": "size-limit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "dev:all": "concurrently -n lib,demo -c blue,green \"npm run dev\" \"cd demo && npm run dev\""
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "jsdom": "^25.0.0",
    "prettier": "^3.8.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "size-limit": "^11.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "3.1 kB"
    }
  ]
}
